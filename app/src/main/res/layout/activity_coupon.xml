<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECDE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/coupon_title"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:text="임시저장"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/coupon_image_view"
        android:layout_width="300dp"
        android:layout_height="550dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        app:autoFlipBack="false"
        app:flipDuration="500"
        app:flipEnabled="true"
        app:flipFrom="right"
        app:flipOnTouch="true"
        app:flipType="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <!-- Back Layout Goes Here -->
        <ImageView
            android:id="@+id/coupon_image_back"
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_gravity="center" />
        <!-- Front Layout Goes Here -->
        <ImageView
            android:id="@+id/coupon_image_front"
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_gravity="center" />
    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/coupon_log_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="쿠폰 적립 기록"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coupon_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>